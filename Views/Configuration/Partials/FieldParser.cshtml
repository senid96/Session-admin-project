<script src="~/Scripts/custom-scripts/configuration/partial-scripts/field-parser.js?rndstr=<%= getRandomStr() %>"></script>


<div>
    <div class="form-inline">
        <select class="form-control" id="parse-platforms">
            <!--dinamically populated-->
        </select>
        <button class="btn btn-custom" id="add-field-parser-modal-btn">Definiši novi</button>
    </div>


    <table id="field-parse-tbl" class="table table-hover">
        <thead>
            <tr>
                <th>Tip parsera</th>
                <th>Broj linija koje treba preskočiti</th>
                <th>Delimiteri</th>
            </tr>
        </thead>
        <tbody>
            <!--dinamically populated-->
        </tbody>
    </table>
</div>


<!-- Modal add -->
<div id="add-field-parser-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="title">Definisanje novog tipa parsiranja</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tip parsera: </label> &nbsp;
                    <select class="form-control" id="file-parser-type"><!--dinamically populated--></select>
                </div>
                <div class="form-group">
                    <label>Delimiteri: </label> &nbsp;
                    <input type="text" class="form-control" id="delimiters" />
                </div>
                <div class="form-group">
                    <label>Broj linija koje treba preskočiti: </label> &nbsp;
                    <input type="text" class="form-control" id="skip-lines" value="0" />
                </div>
                <br />
                <p>Dodavanje novog tipa parsiranja podrazumijeva brisanje postojećeg.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" id="confirm-add-field-parser">Potvrdi</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>

    </div>
</div>

