


<script src="~/Scripts/custom-scripts/configuration/partial-scripts/field-version.js?rndstr=<%= getRandomStr() %>"></script>

<div>
    <div class="form-inline">
        <select class="form-control" id="version-platforms">
            <!--dinamically populated-->
        </select>

        <button class="btn btn-custom" id="open-add-version-modal-btn">Definiši novi</button>
    </div>

    <table id="field-version-tbl" class="table table-hover"></table>
</div>


<!-- Modal add-->
<div id="add-version-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="title">Dodavanje nove verzije polja</h4>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Metoda verzije:</label>
                        <select class="form-control" id="method-versions">
                            <!--dinamically populated-->
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Naziv verzije: </label> &nbsp;
                        <input type="text" class="form-control" id="version" />
                    </div>
                    <div class="form-group">
                        <label>Format: </label> &nbsp;
                        <input type="text" class="form-control" id="format" />
                    </div>
                    <div class="form-group">
                        <label>Datum od: </label> &nbsp;
                        <input type="datetime" class="form-control" id="version-date-from" />
                    </div>
                    <div class="form-group">
                        <label>Datum do: </label> &nbsp;
                        <input type="text" class="form-control" id="version-date-to" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" id="confirm-add-btn">Potvrdi</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>

    </div>
</div>


<!--modal delete-->
<div id="delete-version-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="title">Brisanje verzije</h4>
            </div>
            <div class="modal-body">
                <input id="ver-index" hidden />
                <input id="ver-method" hidden />
                <input id="ver-platform" hidden />
                <p>Da li ste sigurni da želite obrisati verziju polja?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" id="confirm-delete-field-version-btn">Potvrdi</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>

    </div>
</div>