@model SessionAdministration.Models.SuspendedRecord
    <script src="~/Scripts/custom-scripts/suspended-details/suspended-details.js?rndstr=<%= getRandomStr() %>"></script>
    <script src="~/Scripts/custom-scripts/helper-methods.js?rndstr=<%= getRandomStr() %>"></script>

<!--navigation filter menu-->
<nav class="navbar navbar-default tab-custom nav-session-info">
    <input type="text" value="@Model.MedSessionId" hidden id="session-id" />
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a><b>Informacije o fajlu:</b></a></li>
                <li><a>Fajl: @Model.FileName </a></li>
                <li><a>Izvor: <span id="suspended-detail-platform">@Model.FileSource</span> </a></li>
                <li><a>Datum: @Model.SessionDate </a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="table-custom">
    <table id="cdr-table" class="table table-hover">
        <thead>
            <tr>
                <!-- select all boxes -->
                <th hidden>Cdr Id</th>
                <th>CDR</th>
                <th>Broj linije</th>
                <th>Datum izmjene</th>
                <th>Izmjenu napravio</th>
                <th>Status</th>
                <th>Obrada</th>
                <th>Uredi</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- CDR FIELDS Modal -->
<div id="cdr-fields-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-custom">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="title">CDR polja</h4>
            </div>
            <div class="modal-body">
                <table id="error-fields-suspended-cdr-tbl" class="table table-hover">
                    <!--shows data about fields of cdr that failed on validation-->
                    <!--dinamically populated-->
                </table>
                <table id="all-fields-suspended-cdr-tbl" class="table table-hover">
                    <!--shows all cdr fields of suspended file-->
                    <!--dinamically populated-->
                </table>
            </div>
            <div class="modal-footer">
                <button disabled type="button" class="btn btn-custom" id="update-cdr-btn">Potvrdi</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>

    </div>
</div>


<!-- Modal confirm cdr update -->
<div id="confirm-cdr-update-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-custom">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="title">Da li zelite izvrsiti update?</h4>
            </div>
            <div class="modal-body">
                <h4>Da li ste sigurni da želite izvršiti izmjene cdr polja?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" id="confirm-fields-update-btn" data-dismiss="modal">Potvrdi</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" id="confirm-update-cancel-btn">Odustani</button>
            </div>
        </div>

    </div>
</div>



